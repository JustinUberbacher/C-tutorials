using System;

namespace Password
{
    class Program
    {
        static void Main(string[] args)
        {
            var password = "";

            while (password != "password")
            {
                Console.WriteLine("please enter the password.");
                password = Console.ReadLine();
                if (password != "password")
                {
                    Console.WriteLine("Awww we all get the sillies, go away now.");
                }
            }
            Console.WriteLine("you know the password, welcome to the club.");

        }
    }
}
